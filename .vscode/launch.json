    "version": "0.2.0",
    "configurations": 
    {
        "version": "0.2.0",
        "configurations": [
            
          {
            "name": "Launch HTML",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/index.html"
          },
          {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
          },
          {
            "name": "Node.js: Current File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
          },
          {
            "name": "Java",
            "type": "java",
            "request": "launch",
            "mainClass": "${fileBasenameNoExtension}",
            "args": ""
          },
          // Add more configurations for other languages as needed
        ]
      }
    {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
    }